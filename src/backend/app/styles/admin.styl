@import '_core'
@import '_fonts'
@import '_form'
@import '_scrollbars'
@import '_overrides'

$bodyBG = #FFF
// $bodyBG = #CC4640
// $bodyBG2 = #D86B62
$topBG = clouds
// $itemBG = lighten(#EEE,24%)
$itemBG = clouds
$rightBG = white
$hintBG = #E1E478

$spacerBG = darken($itemBG,6%)

$leftWidth = 372px
// $listWidth = 378px
$liHeight = 48px

$admin_height = 48px

$collapsedHeight = 26px

$shadowColour = darken($spacerBG,42%)

muli()
	font-family 'Muli'
	font-size 12px
	letter-spacing .2em
	font-weight 700

body
	background-color $bodyBG
	width 100%
	// font-family Helvetica, Verdana, Arial, sans-serif
	// font-family 'Open Sans'
	font-family 'Roboto', sans-serif
	font-size 15px
	color black
	letter-spacing .06em
	text-align center
	position absolute
	
	ul
		list-style none
		li
			position relative

	h1
		font-style normal
		font-weight normal
		font-size 48px

	h2
		font-style normal
		font-weight normal
		font-size 36px

	h3
		font-style normal
		font-weight normal
		font-size 24px

	h4
		font-style normal
		font-weight normal
		font-size 21px

	h5
		font-style normal
		font-weight normal
		font-size 18px

	h6
		font-style normal
		font-weight normal
		font-size 16px

	label
		text-transform uppercase
		font-weight 700
		font-size 11px

	img
		border-width 0px

	a:link, a:visited
		text-decoration none
		color #444444
		outline none

	a:hover
		color #666666
		position relative
		text-decoration none

	form
		// padding 12px
		overflow hidden

		textarea
			width 100%

		button
		.button
			width 100%

	.fullscreen
		position fixed !important
		top 0
		left 0
		width 100%
		height 100%
		z-index 999999

	.wide
		width 100%

	.BG
		position fixed
		overflow hidden
		z-index -1
		top 0px
		left 0px
		width 100%
		img
			top 0px
			left 0px
			width 100%
	
	#flash
		position fixed
		top 12px
		left 12px
		right 12px
		text-align center
		z-index 999999
		cursor pointer
		.message
			background peter_river
			padding 6px
			color white
			&.success
				background emerald
			&.error
				background alizarin

	#login
		center()
		width 320px
		height 320px
		margin auto
		text-align center

		form
			margin 72px auto
			overflow visible
			
			fieldset
			button
				width 100%

	#admin
		box-sizing content-box
		background-color $topBG
		// background-linear-gradient top, $topBG, 0%, darken($topBG,2%), 100%
		position absolute
		top 0px
		left 0px
		width $leftWidth
		// border 1px solid $spacerBG
		text-align left
		z-index 3
		overflow hidden
		
		.menu
			muli()
			text-transform uppercase
			ul
				position relative
				padding-top $admin_height
				li
					display none
					clickable(none,wet_asphalt,wet_asphalt,white)
					width 100%
					height $admin_height
					line-height $admin_height
					padding 0 24px
					a
						display inline-block
						width 100%
						height $admin_height
					&.active
						display block
						position absolute
						top 0

		.impressum
			display none
			position absolute
			left 24px
			bottom 6px
			width 100%
			font-size .7em
			font-weight 300
			color grey
			a
				color grey

		&.expanded
			height 100%
			.menu
				ul
					li
						display block
		&.root
			height 100%
			.menu
				ul
					padding-top 0
					li
						display block
			.impressum
				display block

	#footer
		#hint
			display none
			background-color $hintBG
			position absolute
			right 6px
			bottom 6px
			padding 6px 10px
			border 0px solid $spacerBG
			border-width 1px
			font-size 13px
			font-weight 300

	#page
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		text-align left
		border-radius 2px
		// box-shadow 1px 1px 6px #AAA
		overflow hidden

		.tools
		.aMD_toolbar
			position absolute
			top 0px
			right 0px
			.spacer
				background $rightBG
				width 4px
				height 100%
				display inline-block
			a
				clickable(none,$manageButtonBG)
				display inline-block
				padding 4px
				border none
				&.edit
					clickable(none,$editButtonBG)
				&.trash
					clickable(none,$trashButtonBG)
			button
				position absolute
				bottom 0
				right 0
			.visibility_toggle
				.visible
					display none
				&.visible
					.visible
						display block
					.invisible
						display none

		.add
			a
				display block
				width 100%
				margin 0 24px
				padding 2px
		.tools
		.add
			a
				img
					display block
					opacity .24
				&:hover
					img
						opacity 1

		.columnHeader
			position relative
			top 0px
			width 100%
			padding 8px 8px 8px 0
			border-bottom-color #aaaaaa
			border-bottom-style solid
			border-bottom-width 1px
			margin-bottom 6px
			text-transform uppercase
			z-index 2

		.sortable
			li
				.handle
					cursor move

		#left
			background-color $itemBG
			position fixed
			top ($admin_height)
			left 0px
			right 0px
			bottom 0px
			width $leftWidth + 24px
			muli()
			font-size 13px
			letter-spacing .1em
			border-right 1px solid $spacerBG
			overflow-x hidden
			overflow-y auto
			ul
				li
					// font-size 18px

			.borderline
				width $leftWidth
				height 100%
				border-right 1px solid $spacerBG

			.menu
				width $leftWidth
				height 100%
				.add
					a
						img
							width 16px
							height 16px
				ul
					li
						clickable($itemBG,lighten($itemBG,42%))
						position relative
						color #AAA
						border-top 1px solid $spacerBG
						&:last-child
							border-bottom 1px solid $spacerBG
						.expander
						.handle
						.link
							background-repeat no-repeat
							background-position center
							background-size 66%
							top 0
							width 24px
							height $liHeight
							cursor pointer
							z-index 1
							opacity .4
						.expander
							position absolute
							clickable(none,$rightBG)
							background-image url(../imgs/static/ui/collapsed.gif)
							left 0
							&.expanded
								background-image url(../imgs/static/ui/expanded.gif)
						.handle
						.link
							position relative
							display none
							float right
						.handle
							background-image url(../imgs/static/ui/sort.gif)
							cursor ns-resize
						.link
							background-image url(../imgs/static/ui/public_link.gif)
						.label
							position relative
							height $liHeight
							padding 0 48px 0 32px
							border-right 1px solid $spacerBG
							color black
							font-weight 300
							line-height $liHeight
							// &.active
							&.focus
								font-weight 700
							a
								ellipsis()
								display inline-block
								width 100%
						.add
						.expander
							border-right 1px solid $spacerBG
							a
								display block
						&:hover
							.handle
							.link
								display block
						&.active
							.submenu
								border-color belize_hole
						&.focus
							background-color $rightBG
							.label
								border-color $rightBG
							.submenu
								.label
									border-color $spacerBG
					&.submenu
						display none
						border 0px solid $shadowColour
						border-width 0 0 0 6px
						&.expanded
							display block
						li
							&:last-child
								border-bottom none
		
		#right
			background-color $rightBG
			position absolute
			left $leftWidth
			top 0
			right 0
			bottom 0
			overflow hidden
			a
				//

			.logo
				center()
				top 24px
				bottom auto

			#stats
				background-color $statsBG
				$circle_size = 240px
				center()
				width $circle_size
				height $circle_size
				color grey
				font-weight 300
				border-radius 50%
				.count
					// background-color $bodyBG
					center()
					width $circle_size - 12
					height $circle_size - 12
					border-radius 50%
					padding 64px 12px
					.number
						font-size 48px
						font-weight 100

				.radial_progress
					$circle_colour = #97A71D
					$transition_length = 1s
					background-color $rightBG
					width $circle_size
					height $circle_size
					border-radius 50%
					.circle
						.mask
						.fill
							position absolute
							width $circle_size
							height $circle_size
							border-radius 50%
							transition transform $transition_length
							-webkit-backface-visibility hidden
						.mask
							clip rect(0px, $circle_size, $circle_size, $circle_size/2)
							.fill
								background-color $circle_colour
								clip rect(0px, $circle_size/2, $circle_size, 0px)

			.stats_link
				center()
				top auto
				bottom 6px
				font-size .7em
				font-weight 300
				a
					color grey

			.header
				background-color $rightBG
				position absolute
				top 0
				left 54px
				right 54px
				padding 0
				margin 0
				border-bottom 1px solid $shadowColour
				font-size 13px
				text-align center
				z-index 999
				transition padding .2s
				ul
					margin -26px 0 0
					color grey
					font-weight 300
					line-height 24px
					transition margin .2s
					border-bottom 1px solid $spacerBG
					li
						display inline-block
						margin 0
						&.meta
							margin 0 12px 0 0
				.title
					ellipsis()
					display block
					margin 12px
					font-weight 600
					font-size 1.8em
					cursor pointer
					transition font-size .2s
				.tools
					// display none
					&.new
					&.right
						height 24px
						margin 0 auto -24px
						white-space nowrap
						a
							background $rightBG
							padding 4px 8px 8px
							border 0px solid $shadowColour
							border-width 0 0 1px 0
							transition padding .2s
							&:first-child
								border-left-width 1px
								padding-left 16px
							&:last-child
								border-right-width 1px
								padding-right 16px
					&.new
						position relative
					&.right
						top auto
						bottom 0
						transition bottom .2s

				&.maximised
					padding 0 0 24px
					border none
					ul
						margin 0 0 24px
						li
							font-size 13px
							line-height 1.4em
					.title
						display block
						font-size 48px
						cursor inherit
					.tools
						&.new
						&.right
							a
								margin 6px
								padding 16px
								border-width 1px
								border-color $spacerBG
								border-radius 50%
								img
									opacity 1
								&:hover
									border-color $shadowColour
						&.right
							bottom 24px
			
			.manage
				// background-color white
				height 100%
				padding 24px 72px 24px
				overflow-y auto

			.menu
				width $rightMenuWidth
			
			.attribute
				overflow hidden
				margin 24px 0
				padding 32px 24px 24px
				border 1px solid $spacerBG
				border-color $spacerBG $rightBG $rightBG
				text-align left
				a.anchor
					position absolute
					top -112px
				.handle
					position absolute
					text-transform uppercase
					top 0
					left 0
					right 0
					padding 4px 5px
				.tools
					display none
					background-color $rightBG
					top 0
					right 0
					height 23px
				&:hover
				&.new
				&.editing
					border 1px solid $shadowColour
					label
						border-bottom 1px solid $shadowColour
					.tools
						display block
				&:hover
					border-color $spacerBG
					label
						border-color $spacerBG
				&.new
				&.editing
					padding 24px 0 0
					border-color $shadowColour
					label
						border-color $shadowColour
					form
						.aMD_container
							border none
						.submit
							border-top 1px solid $shadowColour

			.attributes
				position relative
				margin-top 198px

				&.collapsed .attribute
				.attribute.collapsed
					height $collapsedHeight
					padding 0
					.image
						img
							position absolute
							top 0
					label
						position relative
						float left
						min-width 124px
					&:hover
						label
							border none
					.text
						*
							max-width 50%
							margin 4px 0 0
							padding 0
							display inline-block
							font-size 11px !important
							color lighten(black,54%)
							text-overflow ellipsis
							white-space nowrap
							overflow hidden

			#code-editor
				position absolute
				top 124px
				left 24px
				right 24px
				bottom 24px
			#file_form
				.submit
					position absolute
					bottom 24px
					left 24px
					right 24px
				#code-editor
					bottom 72px
									

