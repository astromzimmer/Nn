// 	font-family Verdana, Arial, sans-serif
// 	font-size 12px
// 	line-height 1.6em

.green
	color #aadaaa

.blue
	color #aacbda

#image_form
	padding 12px

#response_form textarea
	height 75px


@import '_node'
@import '_print'
@import '_publication'
@import '_forms'
