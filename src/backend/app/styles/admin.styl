@import '_core'
// @import '_fonts'
@import '_form'
@import '_scrollbars'
@import '_overrides'

$active_menu_bg = #444

$bodyBG = #FFF
// $bodyBG = #CC4640
// $bodyBG2 = #D86B62
$topBG = #DDD
// $itemBG = lighten(#EEE,24%)
$itemBG = #CCC
$rightBG = #F2F2F2
$hintBG = #E1E478

$spacerBG = darken($itemBG,6%)

$leftWidth = 324px
// $listWidth = 378px
$liHeight = 42px

$admin_height = 48px

$collapsedHeight = 26px

$shadowColour = darken($spacerBG,42%)

muli()
	font-family 'Roboto'
	font-size 12px
	letter-spacing .2em
	font-weight 400

sans-serif()
	font-family sans-serif
	letter-spacing .1em

body
	background-color $rightBG
	width 100%
	// font-family Helvetica, Verdana, Arial, sans-serif
	// font-family 'Open Sans'
	font-family 'Roboto', sans-serif
	font-size 15px
	color black
	letter-spacing .06em
	text-align center
	position absolute
	
	ul
		list-style none
		li
			position relative

	h1
		font-style normal
		font-weight normal
		font-size 48px

	h2
		font-style normal
		font-weight normal
		font-size 36px

	h3
		font-style normal
		font-weight normal
		font-size 24px

	h4
		font-style normal
		font-weight normal
		font-size 21px

	h5
		font-style normal
		font-weight normal
		font-size 18px

	h6
		font-style normal
		font-weight normal
		font-size 16px

	label
		text-transform uppercase
		font-weight 700
		font-size 11px

	img
		border-width 0px

	a:link, a:visited
		text-decoration none
		color #444444
		outline none

	a:hover
		color #666666
		position relative
		text-decoration none

	form
		// padding 12px
		overflow hidden

		textarea
			width 100%

		button
		.button
			width 100%

	.fullscreen
		position fixed !important
		top 0
		left 0
		width 100%
		height 100%
		z-index 999999

	.wide
		width 100%

	.BG
		position fixed
		overflow hidden
		z-index -1
		top 0px
		left 0px
		width 100%
		img
			top 0px
			left 0px
			width 100%
	
	.fontawesome
		font-family 'FontAwesome'
	
	.loading
		loader()
	
	#flash
		position fixed
		top 12px
		left 12px
		right 12px
		text-align center
		z-index 999999
		cursor pointer
		.message
			background peter_river
			padding 6px
			color white
			&.success
				background emerald
			&.error
				background alizarin

	#login
		center()
		width 320px
		height 320px
		margin auto
		text-align center
		font-size 1rem

		form
			margin 72px auto
			overflow visible
			
			fieldset
			button
				width 100%
	
	#admin
		.menu
			muli()
			background-color $topBG
			position absolute
			text-align center
			text-transform uppercase
			width $leftWidth
			ul
				position relative
				padding-top $admin_height
				li
					display none
					clickable($topBG,$active_menu_bg,$active_menu_bg,white)
					width 100%
					height $admin_height
					line-height $admin_height + 4
					padding 0 24px
					a
						display inline-block
						width 100%
						height $admin_height
					&.active
						display block
						position absolute
						top 0
					&.main
						font-size 1.2em
						font-weight 700
			&.right
				// display none
				right 0
			&.expanded
				height 100%
				ul
					li
						display block
	
	#admin
		box-sizing content-box
		// background-linear-gradient top, $topBG, 0%, darken($topBG,2%), 100%
		position absolute
		top 0px
		left 0px
		right 0
		// border 1px solid $spacerBG
		text-align left
		z-index 3
		transition height .2s

		.impressum
			display none
			position absolute
			left 24px
			bottom 12px
			font-size .7em
			font-weight 300
			color grey
			a
				color grey

		&.root
			height 100%
			.menu
				height 100%
				ul
					padding-top 0
					li
						display block
			.impressum
				display block

	#footer
		#hint
			display none
			background-color $hintBG
			position absolute
			right 6px
			bottom 6px
			padding 6px 10px
			border 0px solid $spacerBG
			border-width 1px
			font-size 13px
			font-weight 300

	#page
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		font-size 0
		text-align left
		border-radius 2px
		// box-shadow 1px 1px 6px #AAA
		overflow hidden

		.tools
		.aMD_toolbar
			position absolute
			top 0px
			right 0px
			.spacer
				background $rightBG
				width 4px
				height 100%
				display inline-block
			a
				clickable(none,$manageButtonBG)
				display inline-block
				padding 4px
				border none
				&.edit
					clickable(none,$editButtonBG)
				&.trash
					clickable(none,$trashButtonBG)
			button
				position absolute
				bottom 0
				right 0
			.visibility_toggle
				.visible
					display none
				&.visible
					.visible
						display block
					.invisible
						display none

		.add
			a
				display block
				width 100%
				margin 0 2px
				padding 2px
		.tools
		.add
			a
				img
					display block
					opacity .24
				&:hover
					img
						opacity 1

		.columnHeader
			position relative
			top 0px
			width 100%
			padding 8px 8px 8px 0
			border-bottom-color #aaaaaa
			border-bottom-style solid
			border-bottom-width 1px
			margin-bottom 6px
			text-transform uppercase
			z-index 2

		.sortable
			li
				.handle
					cursor move

		#left
			background-color $itemBG
			position fixed
			top ($admin_height)
			left 0px
			right 0px
			bottom 0px
			width $leftWidth + 24px
			muli()
			font-size 13px
			letter-spacing .1em
			border-right 1px solid $spacerBG
			overflow-x hidden
			overflow-y auto
			
			input#filter
				background $itemBG
				width 100%
				padding 10px 24px
				border-width 0
				font-family Roboto
				font-size 1em
				letter-spacing .1em
				+placeholder()
					font-weight 100
					color lighten(grey,42%)
					letter-spacing .12em
					text-transform uppercase
				&:focus
					background lighten($itemBG,42%)

			ul
				li
					// font-size 18px

			.borderline
				width $leftWidth
				height 100%
				// border-right 1px solid $spacerBG
		#left
		#right
			.menu
				width $leftWidth
				height 100%
				// border-right 1px solid $spacerBG
				.add
					font-size 2.4rem
					font-weight 100
					text-align center
					opacity .42
					&:hover
						opacity 1
				ul
					li
						clickable($itemBG,lighten($itemBG,42%))
						position relative
						border-top 1px solid $spacerBG
						white-space nowrap
						font-size 0
						overflow hidden
						&:last-child
							border-bottom 1px solid $spacerBG
						.grouper
							.expander
							.tool
								background-repeat no-repeat
								background-position center
								background-size 66%
								top 0
								width 24px
								height $liHeight
								font-size 1.8rem
								line-height $liHeight
								text-align center
								cursor pointer
								z-index 1
								opacity .4
								img
									center()
							.expander
								// position absolute
								display inline-block
								clickable(none,$rightBG)
								background-image url(../imgs/static/ui/collapsed.gif)
								left 0
								border-right 1px solid $spacerBG
							.tools
								background $rightBG
								position absolute
								top 0
								right -72px
								bottom 0
								box-shadow inset 1px 0px 1px 0px rgba(0,0,0,.24)
								transition right .2s
								.tool
									position relative
									float right
									&:hover
										background-color transparent
										opacity 1
							.handle
								background-image url(../imgs/static/ui/sort.gif)
								cursor ns-resize
							.link
								background-image url(../imgs/static/ui/public_link.gif)
							.pub
								background-image url(../imgs/static/ui/paper_plane.svg)
							.label
								position relative
								display inline-block
								height $liHeight
								width 100%
								vertical-align top
								padding 0 72px 0 12px
								font-size 13px
								font-weight 300
								line-height $liHeight +3
								a
									display inline-block
									width 100%
									span
										padding 0 3px 0 0
							.add
							.expander
								a
									display block
							&:hover
								> .tools
									right 0
						&.active
							.grouper
								.submenu
									border-color belize_hole
						&.active
						&:hover
							.grouper
								// background-color white
						&.focus
							> .grouper
								background-color $rightBG
								.label
									border-color $rightBG
									font-weight 700
							li
								.label
									border-color $spacerBG
									font-weight 300
						ul
							display none
							border 0px solid $shadowColour
							border-width 0 0 0 6px
							li
								&:last-child
									border-bottom none
						&.expanded
							> .grouper
								> .expander
									background-image url(../imgs/static/ui/expanded.gif)
							> ul
								display block
		
		#center
			background-color $rightBG
			position absolute
			left $leftWidth
			right 0
			height 100%
			overflow hidden
			// overflow-y auto
			a
				//

			.logo
				center()
				top 24px
				bottom auto

			#stats
				background-color $statsBG
				$circle_size = 240px
				center()
				width $circle_size
				height $circle_size
				color grey
				font-weight 300
				border-radius 50%
				.count
					// background-color $bodyBG
					center()
					width $circle_size - 12
					height $circle_size - 12
					border-radius 50%
					padding 64px 12px
					.number
						font-size 48px
						font-weight 100

				.radial_progress
					$circle_colour = #97A71D
					$transition_length = 1s
					background-color $rightBG
					width $circle_size
					height $circle_size
					border-radius 50%
					.circle
						.mask
						.fill
							position absolute
							width $circle_size
							height $circle_size
							border-radius 50%
							transition transform $transition_length
							-webkit-backface-visibility hidden
						.mask
							clip rect(0px, $circle_size, $circle_size, $circle_size/2)
							.fill
								background-color $circle_colour
								clip rect(0px, $circle_size/2, $circle_size, 0px)

			.stats_link
				center()
				top auto
				bottom 6px
				font-size .7em
				font-weight 300
				a
					color grey
			
			.manage
				// background-color white
				height 100%
				padding 24px 72px 24px
				font-size 1.4rem
				overflow-y auto
				
				#optionsContainer
					input
						width 30%
						padding 0
						border-width 0 0 1px

			#code-editor
				position absolute
				top 124px
				left 24px
				right 24px
				bottom 24px
			#file_form
				.submit
					position absolute
					bottom 24px
					left 24px
					right 24px
				#code-editor
					bottom 72px
		
		#right
			// display none
			background $itemBG
			right 0


ul
	position relative
	list-style-type none

#admin_pages .right
	position relative

#admin_pages .right .tools
	position absolute
	top 0px
	left 386px

#admin_pages .right img
	margin-bottom 3px

ul.submenu span.edit img
	margin-bottom -3px

.menu
.submenu
	position relative

.adminHeader
	margin-bottom 24px

.RTE
	width 92%
	padding-right 6px

