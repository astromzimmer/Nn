
body
	#center
		#forms
			.header
				width 100%
				padding 1em
				text-align center
			ul.entries
				margin 2em 0 0
				li.entry
					padding 1em
					border 0px solid $spacerBG
					border-top-width 1px
					ul.data
						li.field
							padding .2em 0
							font-weight 300
					&:nth-child(odd)
						background $itemBG
					&:last-child
						border-bottom-width 1px